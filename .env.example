# Ejemplo de configuración de variables de entorno
# Copia este archivo como .env y configura tus valores

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==============================================
DB_HOST=localhost
DB_DATABASE=condominios_db
DB_USERNAME=tu_usuario_db
DB_PASSWORD=tu_password_db
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ==============================================
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# ==============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=tu_email@gmail.com
MAIL_FROM_NAME="Cyberhole Condominios"

# ==============================================
# CONFIGURACIÓN DE SEGURIDAD
# ==============================================
# JWT Secret - Debe ser una cadena larga y aleatoria
JWT_SECRET=tu_jwt_secret_muy_largo_y_aleatorio_aqui

# Configuración de sesiones
SESSION_LIFETIME=3600
MAX_REQUESTS_PER_HOUR=100
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Configuración de BCrypt
BCRYPT_ROUNDS=12

# Secrets para hashing de passwords
PEPPER_SECRET=tu_pepper_secret_super_secreto
CYBERHOLE_ENCRYPTION_KEY=tu_clave_de_encriptacion_cyberhole_32
CYBERHOLE_PASSWORD_PEPPER=tu_pepper_adicional_para_passwords

# ==============================================
# CONFIGURACIÓN DE ENCRIPTACIÓN AES
# ==============================================
# Clave AES - DEBE tener exactamente 32 caracteres
AES_KEY=tu_clave_aes_de_32_caracteres_ex
AES_METHOD=AES-256-CBC

# ==============================================
# CONFIGURACIÓN DEL SITIO
# ==============================================
SITE_URL=http://localhost
SITE_NAME="Cyberhole Condominios"
ADMIN_EMAIL=admin@cyberhole.net
APP_ENV=development
DEBUG_MODE=true

# ==============================================
# CONFIGURACIÓN DE CORS
# ==============================================
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# ==============================================
# CONFIGURACIÓN DE UPLOADS
# ==============================================
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=2097152

# ==============================================
# CONFIGURACIÓN DE LOGS
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
MAX_LOG_SIZE=10485760
